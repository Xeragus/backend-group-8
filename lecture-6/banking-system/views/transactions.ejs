<%- include('partials/header') %>
<%- include('partials/nav') %>
<div class="container mt-5">
  <table class="table table-hover table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Transaction Number</th>
        <th scope="col">From Account</th>
        <th scope="col">To Account</th>
        <th scope="col">Amount</th>
        <th scope="col">Comment</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% transactions.forEach(transaction => { %>
        <tr>
          <th scope="row"><%= transaction._id %> </th>
          <td><%= transaction.transaction_number %></td>
          <td><a href="/accounts/23423423"><%= transaction.from_account_id %></a></td>
          <td><a href=""><%= transaction.to_account_id %></a></td>
          <td>$<%= transaction.amount %></td>
          <td><i><%= transaction.comment %></i></td>
          <td>
            <a href='/transaction/<%= transaction._id %>' class="btn btn-outline-warning">Clone</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('partials/footer') %>  
